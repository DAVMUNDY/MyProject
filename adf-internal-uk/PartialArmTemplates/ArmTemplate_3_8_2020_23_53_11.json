{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-internal-uk"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/ora_to_adls')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy_45x",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "SCOTT.EMP"
							},
							{
								"name": "Destination",
								"value": "landing//emp_ora"
							}
						],
						"typeProperties": {
							"source": {
								"type": "OracleSource",
								"partitionOption": "None"
							},
							"sink": {
								"type": "JsonSink",
								"storeSettings": {
									"type": "AzureBlobFSWriteSettings"
								},
								"formatSettings": {
									"type": "JsonWriteSettings",
									"quoteAllText": true,
									"filePattern": "setOfObjects"
								}
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"name": "EMPNO",
											"type": "Decimal"
										},
										"sink": {
											"path": "$['EMPNO']"
										}
									},
									{
										"source": {
											"name": "ENAME",
											"type": "String"
										},
										"sink": {
											"path": "$['ENAME']"
										}
									},
									{
										"source": {
											"name": "JOB",
											"type": "String"
										},
										"sink": {
											"path": "$['JOB']"
										}
									},
									{
										"source": {
											"name": "MGR",
											"type": "Decimal"
										},
										"sink": {
											"path": "$['MGR']"
										}
									},
									{
										"source": {
											"name": "HIREDATE",
											"type": "DateTime"
										},
										"sink": {
											"path": "$['HIREDATE']"
										}
									},
									{
										"source": {
											"name": "SAL",
											"type": "Decimal"
										},
										"sink": {
											"path": "$['SAL']"
										}
									},
									{
										"source": {
											"name": "COMM",
											"type": "Decimal"
										},
										"sink": {
											"path": "$['COMM']"
										}
									},
									{
										"source": {
											"name": "DEPTNO",
											"type": "Decimal"
										},
										"sink": {
											"path": "$['DEPTNO']"
										}
									}
								]
							}
						},
						"inputs": [
							{
								"referenceName": "SourceDataset_45x",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "DestinationDataset_45x",
								"type": "DatasetReference"
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/SourceDataset_45x')]",
				"[concat(variables('factoryId'), '/datasets/DestinationDataset_45x')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/DestinationDataset_45x')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureADLSg2LinkedService",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "Json",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": "emp_ora",
						"fileSystem": "landing"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/SourceDataset_45x')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "orcl_12c_testvm",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "OracleTable",
				"schema": [],
				"typeProperties": {
					"schema": "SCOTT",
					"table": "EMP"
				}
			},
			"dependsOn": []
		}
	]
}